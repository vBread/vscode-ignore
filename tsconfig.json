{
	"compilerOptions": {
		"importHelpers": true,
		"lib": [
			"ESNext"
		],
		"target": "ESNext",
		"module": "CommonJS",
		"moduleResolution": "node",
		"outDir": "dist",
		"removeComments": false,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*"
	],
}
