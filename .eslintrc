{
	"root": true,
	"env": {
		"node": true
	},
	"plugins": [
		"@typescript-eslint"
	],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"prettier"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"project": "./tsconfig.json",
		"sourceType": "module",
		"ecmaVersion": "latest"
	},
	"ignorePatterns": [
		".DS_Store",
		"dist",
		"node_modules"
	]
}
