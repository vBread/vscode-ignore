{
	"name": "vscode-ignore",
	"displayName": "VSCode Ignore",
	"description": "Language features for .ignore files",
	"icon": "assets/dot-ignore.png",
	"main": "./dist/extension.js",
	"version": "2.1.0",
	"publisher": "Breadnaught",
	"license": "MIT",
	"engines": {
		"vscode": "^1.64.0"
	},
	"scripts": {
		"vscode:prepublish": "npm run build",
		"build": "rimraf dist && tsc -b",
		"watch": "tsc --watch"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/xiBread/vscode-ignore.git"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"ignore",
		"template",
		"file",
		"folder",
		"path",
		"git",
		"directory",
		"glob"
	],
	"activationEvents": [
		"onLanguage:ignore",
		"onCommand:ignore.newFile",
		"onCommand:ignore.ignorePath"
	],
	"contributes": {
		"languages": [
			{
				"id": "ignore",
				"aliases": [
					"Ignore"
				],
				"extensions": [
					".alexignore",
					".bazelignore",
					".boringignore",
					".bzrignore",
					".cfignore",
					".chefignore",
					".deployignore",
					".dockerignore",
					".ebignore",
					".eleventyignore",
					".eslintignore",
					".flooignore",
					".gcloudignore",
					".gitignore",
					".helmignore",
					".hgignore",
					".jpmignore",
					".jshintignore",
					".markdownlintignore",
					".mtn-ignore",
					".nodemonignore",
					".npmignore",
					".nuxtignore",
					".p4ignore",
					".prettierignore",
					".slugignore",
					".solhint",
					".stylelintignore",
					".stylintignore",
					".swagger-codegen-ignore",
					".stignore",
					".tfignore",
					".tokeignore",
					".upignore",
					".vercelignore",
					".vscodeignore",
					".yarnignore"
				],
				"configuration": "./config.json"
			}
		],
		"grammars": [
			{
				"language": "ignore",
				"scopeName": "source.ignore",
				"path": "./syntaxes/ignore.tmLanguage.json"
			}
		],
		"configuration": {
			"title": "Ignore",
			"properties": {
				"ignore.newFileConflictBehavior": {
					"type": "string",
					"enum": [
						"overwrite",
						"append",
						"prompt"
					],
					"enumDescriptions": [
						"Always overwrite existing ignore files.",
						"Always append to existing ignore files.",
						"Always prompt what to do when an ignore file already exists."
					],
					"default": "prompt",
					"description": "Choose the default behavior when attempting to create a new ignore file and an ignore file already exists."
				}
			}
		},
		"menus": {
			"explorer/context": [
				{
					"command": "ignore.ignorePath",
					"when": "resourceLangId != unknown",
					"group": "2_workspace"
				},
				{
					"command": "ignore.newFile",
					"when": "resourceLangId != unknown",
					"group": "2_workspace"
				},
				{
					"command": "ignore.newFile",
					"when": "resourceLangId == unknown",
					"group": "2_navigation"
				}
			]
		},
		"commands": [
			{
				"command": "ignore.ignorePath",
				"title": "Ignore: Ignore Path"
			},
			{
				"command": "ignore.newFile",
				"title": "Ignore: New File"
			}
		]
	},
	"devDependencies": {
		"@types/node": "^17.0.23",
		"@types/vscode": "^1.64.0",
		"prettier": "^2.6.2",
		"typescript": "^4.6.3"
	},
	"dependencies": {
		"@octokit/request": "^5.6.3",
		"fast-glob": "^3.2.11",
		"ts-dedent": "^2.2.0",
		"tslib": "^2.3.1"
	}
}
